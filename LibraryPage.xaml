<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MusicManager.LibraryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MusicManager"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel>
        <TextBlock
            Text="ライブラリ"
            Style="{ThemeResource SubtitleTextBlockStyle}"
            Foreground="{ThemeResource TextFillColorPrimaryBrush}"
            Margin="0,0,0,16"
        />
        <Border 
            CornerRadius="4"
            BorderThickness="1"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            Padding="16"
            Margin="0,0,0,8"
        >
            <StackPanel>
                <TextBlock
                    Text="iTunes Music Library.xml の出力"
                    Margin="0,0,0,8"
                    Style="{ThemeResource BodyTextBlockStyle}"
                    Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                />
                <TextBlock 
                    x:Name="targetFileCountText"
                    Text="0 件の音楽ファイル"
                    VerticalAlignment="Center"
                    Style="{ThemeResource CaptionTextBlockStyle}"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Margin="0,0,0,16"
                />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button
                        x:Name="executeButton"
                        Content="{x:Bind ExportITLViewModel.ExecuteButtonText, Mode=OneWay}"
                        Click="ExecuteButtonClick"
                    ></Button>
                    <TextBlock
                        x:Name="doneNoticeText"
                        Text="{x:Bind ExportITLViewModel.DoneNoticeText, Mode=OneWay}"
                        VerticalAlignment="Center"
                        Grid.Column="1"
                        Margin="8,0,0,0"
                        Visibility="{x:Bind ExportITLViewModel.DoneNoticeTextVisibility, Mode=OneWay}"
                        Style="{ThemeResource CaptionTextBlockStyle}"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    />
                    <ProgressBar
                        x:Name="progressBar"
                        Margin="8,0,0,0"
                        Grid.Column="1"
                        Value="{x:Bind ExportITLViewModel.Progress, Mode=OneWay}"
                        Visibility="{x:Bind ExportITLViewModel.ProgressBarVisibility, Mode=OneWay}"
                    />
                </Grid>
            </StackPanel>
        </Border>
    </StackPanel>
</Page>
