<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MusicManager.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MusicManager"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    >

    <StackPanel>
        <TextBlock
            Text="設定"
            Style="{ThemeResource SubtitleTextBlockStyle}"
            Foreground="{ThemeResource TextFillColorPrimaryBrush}"
            Margin="0,0,0,16"
        />
        <Border 
            CornerRadius="4"
            BorderThickness="1"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            Padding="16"
            Margin="0,0,0,8"
        >
            <StackPanel Orientation="Vertical">
                <TextBlock
                    Text="ライブラリの場所"
                    Margin="0,0,0,8"
                    Style="{ThemeResource BodyTextBlockStyle}"
                    Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button
                        x:Name="libraryPlacePickerButton"
                        Content="選択"
                        VerticalAlignment="Center"
                        Grid.Column="0"
                        Margin="0,0,8,0"
                        Click="LibraryPlacePickerButtonClick"
                    />
                    <TextBlock 
                        x:Name="libraryPlacePickerText"
                        Text="未選択"
                        VerticalAlignment="Center"
                        Style="{ThemeResource CaptionTextBlockStyle}"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Grid.Column="1"
                    />
                </Grid>
            </StackPanel>
        </Border>
        <Border 
            CornerRadius="4"
            BorderThickness="1"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            Padding="16"
        >
            <StackPanel Orientation="Vertical">
                <TextBlock
                    Text="設定のリセット"
                    Margin="0,0,0,8"
                    Style="{ThemeResource BodyTextBlockStyle}"
                    Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                />
                <Button Content="実行" Click="PreferenceResetButtonClick" />
            </StackPanel>
        </Border>
    </StackPanel>
</Page>
